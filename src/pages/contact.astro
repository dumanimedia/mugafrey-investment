---
import Breadcrumb from '~/components/Breadcrumb.astro';
import Layout from '~/components/Layout.astro';
import { Image } from 'astro:assets';
import phoneIcon from '~/assets/images/icons/phone.svg';
import mailIcon from '~/assets/images/icons/mail.svg';
import locationIcon from '~/assets/images/icons/location.svg';
---

<Layout title='Contact - Mugafrey Investment'>
  <section>
    <Breadcrumb title='Contact' info='Feel Free To Send Us A Message Now!' />
    <div class='wrapper py-20 flex flex-col gap-y-10'>
      <div class='flex flex-wrap items-center justify-center gap-y-6'>
        <div class='contact1 sm:px-4 w-full sm:w-1/2 lg:w-1/3'>
          <div
            class='py-[60px] px-[30px] flex items-center justify-center flex-col bg-[rgb(23,23,23)] rounded-2xl'
          >
            <Image
              class='aspect-square w-14'
              src={phoneIcon}
              alt='phone icon'
            />
            <h4 class='text-2xl mb-4 mt-8 font-bold'>Phone</h4>
            <p>
              Vivamus ut tellus mi. Nulla nec cursus elit, id vulputate nec
              cursus augue.
            </p>
            <br />
            <a
              class='!text-[var(--light-green-color)] hover:!text-[var(--light-blue-color)]'
              href='tel:+256 772 037464'
            >
              +256 772 037464</a
            >
            <br />
            <a
              class='!text-[var(--light-green-color)] hover:!text-[var(--light-blue-color)]'
              href='tel:+256 702 259292'
            >
              +256 702 259292</a
            >
          </div>
        </div>
        <div class='contact2 sm:px-4 w-full sm:w-1/2 lg:w-1/3'>
          <div
            class='py-[60px] px-[30px] flex items-center justify-center flex-col bg-[rgb(23,23,23)] rounded-2xl'
          >
            <Image class='aspect-square w-14' src={mailIcon} alt='mail icon' />
            <h4 class='text-2xl mb-4 mt-8 font-bold'>Email</h4>
            <p>
              Vivamus ut tellus mi. Nulla nec cursus elit, id vulputate nec
              cursus augue.
            </p>
            <br />
            <a
              class='!text-[var(--light-green-color)] hover:!text-[var(--light-blue-color)]'
              href='mailto:mugafreyinvestment@gmail.com'
            >
              mugafreyinvestment@gmail.com
            </a>
          </div>
        </div>
        <div class='contact3 sm:px-4 w-full sm:w-1/2 lg:w-1/3'>
          <div
            class='py-[60px] px-[30px] flex items-center justify-center flex-col bg-[rgb(23,23,23)] rounded-2xl'
          >
            <Image
              class='aspect-square w-14'
              src={locationIcon}
              alt='location icon'
            />
            <h4 class='text-2xl mb-4 mt-8 font-bold'>Location</h4>
            <p>
              P.O. Box 700651 <br />
               Kitooro - Entebbe, Uganda.
            </p>
            <br />
            <a
              class='!text-[var(--light-green-color)] hover:!text-[var(--light-blue-color)]'
              href='https://www.maps.google.com'
              target='_blank'
              rel='noopener noreferrer'
            >
              View on google maps
            </a>
          </div>
        </div>
      </div>

      <div class='content'>
        <div class='section-header'>
          <span>Send Us a Message</span>
          <h2>Send Us a Message</h2>
          <p class='text-[var(--tartiary-color)] font-semibold'>
            We'll get back to you as soon as possible, that's our promise
          </p>
        </div>
        <form
          class='sm:backdrop-blur-sm w-full flex items-center gap-x-3 gap-y-6 justify-between flex-wrap py-5 sm:px-5 sm:border-2 rounded-lg border-[var(--dark-green-color)]'
        >
          <div class='w-full lg:w-[calc(33.33%-16px)] relative'>
            <input
              required
              class='transition-all duration-300 w-full p-4 rounded-xl bg-[var(--background-color)] bg-opacity-40 text-[var(--tartiary-color)]'
              type='text'
              id='name'
              placeholder='Full Name'
            />
          </div>
          <div class='w-full lg:w-[calc(33.33%-16px)] relative'>
            <input
              required
              class='transition-all duration-300 w-full p-4 rounded-xl bg-[var(--background-color)] bg-opacity-40 text-[var(--tartiary-color)]'
              type='email'
              id='email'
              placeholder='E-mail Address'
            />
          </div>
          <div class='w-full lg:w-[calc(33.33%-16px)] relative'>
            <input
              required
              class='transition-all duration-300 w-full p-4 rounded-xl bg-[var(--background-color)] bg-opacity-40 text-[var(--tartiary-color)]'
              type='text'
              id='subject'
              placeholder='Subject'
            />
          </div>
          <div class='w-full'>
            <textarea
              required
              class='w-full p-4 bg-[var(--background-color)] bg-opacity-40 text-[var(--tartiary-color)] transition-all duration-300 rounded-lg min-h-[250px]'
              name='message'
              id='message'
              placeholder='Your message'></textarea>
          </div>
          <div class='w-full flex items-center justify-center'>
            <button
              class='outline-none uppercase font-bold px-6 py-3 transition-colors duration-300 rounded-full bg-[var(--dark-green-color)] hover:bg-[var(--light-green-color)] focus:bg-[var(--light-green-color)] text-[var(--tartiary-color)]'
              type='submit'>Send Message</button
            >
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  input,
  textarea {
    background: var(--tartiary-color);
    color: var(--background-color);
  }
</style>
