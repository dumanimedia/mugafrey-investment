<button
  class='scrollBtn fixed bg-[var(--dark-green-color)] hover:bg-[var(--light-green-color)] outline-none rounded-full bottom-5 right-5 invisible transition-all ease-in-out duration-200 flex items-center justify-center z-[1000] border border-[var(--dark-blue-color)]'
  onclick='
  window.scrollTo(0, 0)
  '
>
  <i class='text-4xl bi-arrow-up-circle'></i>
</button>

<script>
  const scrollBtn = document.querySelector('.scrollBtn');

  function btnScroll(): void {
    let yPosition = window.scrollY;

    if (yPosition > 40) {
      scrollBtn?.classList.add('visible');
      scrollBtn?.classList.remove('invisible');
    } else {
      scrollBtn?.classList.add('invisible');
      scrollBtn?.classList.add('visible');
    }
  }

  window.addEventListener('scroll', () => btnScroll());
</script>
