---
import { SEO } from 'astro-seo';
interface Props {
  title: string;
}
const { title } = Astro.props;
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollBtn from '../components/ScrollBtn.astro';
---

<!doctype html>
<html lang='en'>
  <head>
    <SEO
      title={title}
      description="We're the leading provider of logistics and financing solutions for businesses of all sizes. We'll work with you to find the right solution for your needs."
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: 'https://mugafreyinvestment.vercel.app/social.jpg',
          url: 'https://mugafreyinvestment.vercel.app',
        },
      }}
      twitter={{
        creator: '@dumanimedia',
        description:
          "We're the leading provider of logistics and financing solutions for businesses of all sizes. We'll work with you to find the right solution for your needs.",
        title: title,
        image: 'https://mugafreyinvestment.vercel.app/social.jpg',
        imageAlt: 'mugafrey investment',
        card: 'summary_large_image',
      }}
      ,
      extend={{
        link: [
          { rel: 'icon', href: '/favicon.png' },
          {
            rel: 'stylesheet',
            href: '/bootstrap-icons/bootstrap-icons.min.css',
          },
          { rel: 'preconnect', href: 'https://fonts.googleapis.com' },
          {
            rel: 'preconnect',
            href: 'https://fonts.gstatic.com',
            crossorigin: '',
          },
          {
            rel: 'stylesheet',
            href: "https://fonts.googleapis.com/css2?family=ABeeZee&family=Space+Grotesk:wght@400;500;600;700&display=swap'",
          },
        ],
        meta: [
          {
            name: 'viewport',
            content: 'width=device-width, initial-scale=1.0',
          },
        ],
      }}
    />
    <meta charset='UTF-8' />
    <meta name='generator' content={Astro.generator} />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <ScrollBtn />
  </body>
</html>
