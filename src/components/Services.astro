---
import { Image } from "astro:assets";

import { servicesInfo } from "~/data/info";
---

<section id="services" class="py-10 mb-10">
  <div class="wrapper">
    <div class="section-header">
      <span>Financial services</span>
      <h2 class="title">Financial services</h2>
    </div>

    <div
      class="services-list flex items-center gap-x-4 lg:gap-x-8 gap-y-10 xs:justify-center sm:justify-start flex-wrap"
    >
      {
        servicesInfo.map((service) => (
          <div class="service w-full sm:w-[calc(50%-16px)] lg:w-[calc(33.33%-32px)] border border-[rgba(var(--dark-blue-color-rgb), 0.15)]">
            <a
              href={`/service/${service.name}`}
              class="service--container group"
            >
              <div class="service--img flex items-center justify-center relative overflow-hidden">
                <Image
                  src={service.image}
                  alt={`${service.name}`}
                  class="scale-100 group-hover:scale-105 transition-scale duration-300"
                />
              </div>
              <div class="px-[30px]">
                <h3 class="transition-colors ease-in-out group-hover:text-[var(--light-blue-color)] pt-5 pb-3 text-2xl">
                  {service.name}
                </h3>
                <p class="mb-8 leading-wide">{service.subtitle}</p>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
