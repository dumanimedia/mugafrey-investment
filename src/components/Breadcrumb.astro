---
interface Props {
  title: string;
  info: string;
}
const { title, info } = Astro.props;
import { getImage } from 'astro:assets';
import breadCrumbImg from '~/assets/images/page-header.jpg';
const optimizedImg = await getImage({ src: breadCrumbImg });
---

<section class='border-b border-[var(--light-blue-color)]'>
  <div
    class='pt-[110px] md:pt-[140px] pb-20'
    style={`background: linear-gradient(rgba(14, 20, 40, 0.8), rgba(14, 20, 40, 1)), url(${optimizedImg.src}) center center;`}
  >
    <div class='wrapper'>
      <div class='flex items-center justify-center flex-col'>
        <h2 class='font-semibold text-[56px] text-center'>{title}</h2>
        <p class='max-w-3xl text-center'>
          {info}
        </p>
      </div>
    </div>
  </div>
  <ol class='wrapper flex py-4 items-center justify-center'>
    <li>
      <a
        href='/'
        class='!text-[var(--light-green-color)] hover:!text-[var(--light-blue-color)]'
        >Home</a
      >
    </li>
    <li class='px-2.5'>/</li>
    <li>
      {title}
    </li>
  </ol>
</section>
